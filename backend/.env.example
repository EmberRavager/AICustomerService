# 智能客服系统环境配置文件示例
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 应用基础配置
# ===========================================

# 应用名称
APP_NAME=智能客服系统

# 运行环境 (development, production, testing)
ENVIRONMENT=development

# 调试模式
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 允许的域名（生产环境）
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===========================================
# AI 服务配置
# ===========================================

# 模型提供商选择 (openai, gemini, deepseek, zhipu, baichuan, qwen, moonshot, yi)
MODEL_PROVIDER=openai

# 通用模型参数
DEFAULT_MODEL=gpt-3.5-turbo
TEMPERATURE=0.7
MAX_TOKENS=2000
TOP_P=1.0
FREQUENCY_PENALTY=0.0
PRESENCE_PENALTY=0.0

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini API 配置
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_API_BASE=https://generativelanguage.googleapis.com
GEMINI_MODEL=gemini-pro

# DeepSeek API 配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# 智谱AI API 配置
ZHIPU_API_KEY=your_zhipu_api_key_here
ZHIPU_API_BASE=https://open.bigmodel.cn/api/paas/v4
ZHIPU_MODEL=glm-4

# 百川智能 API 配置
BAICHUAN_API_KEY=your_baichuan_api_key_here
BAICHUAN_API_BASE=https://api.baichuan-ai.com/v1
BAICHUAN_MODEL=Baichuan2-Turbo

# 通义千问 API 配置
QWEN_API_KEY=sk-c4c02252bef8401faf354272aea06ec2
QWEN_API_BASE=https://dashscope.aliyuncs.com/api/v1
QWEN_MODEL=qwen-turbo

# 月之暗面 API 配置
MOONSHOT_API_KEY=your_moonshot_api_key_here
MOONSHOT_API_BASE=https://api.moonshot.cn/v1
MOONSHOT_MODEL=moonshot-v1-8k

# 零一万物 API 配置
YI_API_KEY=your_yi_api_key_here
YI_API_BASE=https://api.lingyiwanwu.com/v1
YI_MODEL=yi-34b-chat-0205

# 备用 AI 服务配置（可选）
# AZURE_OPENAI_API_KEY=your_azure_openai_key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_VERSION=2023-12-01-preview

# ===========================================
# 数据库配置
# ===========================================

# SQLite 数据库路径
DATABASE_URL=sqlite:///./data/chatbot.db

# 如果使用 PostgreSQL（可选）
# DATABASE_URL=postgresql://username:password@localhost:5432/chatbot_db

# 如果使用 MySQL（可选）
# DATABASE_URL=mysql://username:password@localhost:3306/chatbot_db

# ===========================================
# 向量数据库配置
# ===========================================

# ChromaDB 配置
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=knowledge_base

# 文本嵌入模型
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# ===========================================
# Redis 配置（可选，用于缓存）
# ===========================================

# Redis 连接配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# 缓存过期时间（秒）
CACHE_EXPIRE_TIME=3600

# ===========================================
# 安全配置
# ===========================================

# JWT 密钥（用于用户认证）
SECRET_KEY=your_super_secret_key_here_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 密码加密
PASSWORD_HASH_ALGORITHM=bcrypt

# ===========================================
# 日志配置
# ===========================================

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 日志文件路径
LOG_FILE_PATH=./logs/app.log

# 日志保留天数
LOG_RETENTION_DAYS=30

# ===========================================
# 文件上传配置
# ===========================================

# 上传文件存储路径
UPLOAD_DIRECTORY=./uploads

# 最大文件大小（字节）
MAX_FILE_SIZE=10485760  # 10MB

# 允许的文件类型
ALLOWED_FILE_TYPES=.txt,.pdf,.doc,.docx,.md

# ===========================================
# 聊天配置
# ===========================================

# 聊天历史保留条数
MAX_CHAT_HISTORY=100

# 会话超时时间（分钟）
SESSION_TIMEOUT_MINUTES=60

# 最大并发会话数
MAX_CONCURRENT_SESSIONS=1000

# ===========================================
# 知识库配置
# ===========================================

# 知识库搜索结果数量
KNOWLEDGE_SEARCH_LIMIT=10

# 相似度阈值
SIMILARITY_THRESHOLD=0.7

# 知识库更新间隔（小时）
KNOWLEDGE_UPDATE_INTERVAL=24

# ===========================================
# 性能配置
# ===========================================

# 工作进程数
WORKERS=1

# 每个进程的线程数
THREADS=4

# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 连接池大小
CONNECTION_POOL_SIZE=20

# ===========================================
# 监控配置
# ===========================================

# 启用性能监控
ENABLE_MONITORING=true

# 监控数据保留天数
MONITORING_RETENTION_DAYS=7

# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=60